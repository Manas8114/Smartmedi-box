# Configuración de ejemplo para Mosquitto MQTT Broker
# Copiar a mosquitto.conf y ajustar según necesidades

# Puerto MQTT estándar
listener 1883
protocol mqtt

# Puerto WebSocket para frontend React
listener 9001
protocol websockets

# Permitir conexiones anónimas (cambiar en producción)
allow_anonymous true

# Persistencia
persistence true
persistence_location /var/lib/mosquitto/

# Logging
log_dest file /var/log/mosquitto/mosquitto.log
log_type error
log_type warning
log_type notice
log_type information

# Configuración de conexión
max_connections -1
max_inflight_messages 20
max_queued_messages 1000

# Retención de mensajes
max_queued_bytes 0

# Timeout
keepalive_interval 60

# Si necesitas autenticación (descomentar y configurar):
# password_file /etc/mosquitto/passwd
# allow_anonymous false

# Si necesitas SSL/TLS (descomentar y configurar):
# listener 8883
# protocol mqtt
# cafile /etc/mosquitto/certs/ca.crt
# certfile /etc/mosquitto/certs/server.crt
# keyfile /etc/mosquitto/certs/server.key
# require_certificate false

